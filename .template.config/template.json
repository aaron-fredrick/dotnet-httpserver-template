{
    "$schema": "http://json.schemastore.org/template",
    "author": "Aaron Fredrick",
    "classifications": [
        "Web",
        ".NET",
        "Server"
    ],
    "defaultName": "HttpServer",
    "identity": "AF.DotnetHttpServer.Template",
    "name": "Dotnet HTTP Server Template",
    "shortName": "af-httpserver",
    "sourceName": "$safeprojectname$",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sources": [
        {
            "source": "./",
            "target": "./",
            "exclude": [
                ".git/**",
                "bin/**",
                "obj/**",
                "*.nupkg",
                ".vs/**",
                ".idea/**",
                ".github/**",
                "artifacts/**",
                "dotnet-httpserver-template.*",
                ".template.config/**"
            ]
        }
    ],
    "preferNameDirectory": true,
    "symbols": {
        "templateVersion": {
            "type": "parameter",
            "replaces": "1.0.0-beta",
            "defaultValue": "1.0.0-beta"
        },
        "authorName": {
            "type": "parameter",
            "replaces": "Aaron Fredrick",
            "defaultValue": "Aaron Fredrick"
        },
        "port": {
            "type": "parameter",
            "replaces": "5566",
            "datatype": "int",
            "defaultValue": "5566"
        },
        "license": {
            "type": "parameter",
            "replaces": "MIT",
            "defaultValue": "MIT"
        }
    },
    "primaryOutputs": [
        {
            "path": "$safeprojectname$.csproj"
        }
    ],
    "postActions": [
        {
            "description": "Restore NuGet packages required by this project.",
            "manualInstructions": [
                {
                    "text": "Run 'dotnet restore'"
                }
            ],
            "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
            "args": {
                "targetDirectory": "."
            },
            "continueOnError": true
        }
    ]
}